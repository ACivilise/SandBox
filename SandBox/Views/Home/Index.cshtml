@using SandBox.Areas.ML.Controllers;
@using SandBox.Constantes;
@{
    ViewData["Title"] = "Home Page";
}
<div id="fonctions"
     data-url-test-google-or="@Url.Action(nameof(MLController.TestGoogleOR), "ML", new { area = Areas.ML })"
     data-url-train-model="@Url.Action(nameof(MLController.TrainModel), "ML", new { area = Areas.ML })"
     data-url-predict="@Url.Action(nameof(MLController.FirstPage), "ML", new { area = Areas.ML })">
</div>

<div class="col-xs-12">
    <div class="form-group col-xs-12">
        <button type="button"
                class="btn btn-primary"
                id="startTestGoogleORBtn">
            <div id="TestGoogleORSpinner" class="col-xs-12 d-none">
                <span class="fa fa-spinner fa-spin"></span>
            </div>
            <span>Tester Google OR Tools</span>
        </button>
        <label id="MsgTestGoogleOROk" class="d-none">Création du modèle de prédiction réussie ! </label>
    </div>
    <div class="form-group col-xs-12">
        <button type="button"
                class="btn btn-primary"
                id="startTrainingBtn">
            <div id="TrainingSpinner" class="col-xs-12 d-none">
                <span class="fa fa-spinner fa-spin"></span>
            </div>
            <span>Démarrer l'entrainement</span>
        </button>
        <label id="MsgOk" class="d-none">Création du modèle de prédiction réussie ! </label>
        <label id="MsgNotOk" class="d-none">Erreur lors de la création du modèle de prédiction !</label>
    </div>
    <div class="form-group col-xs-12">
        <button type="button"
                class="btn btn-primary"
                id="firstPageBtn">
            <div id="firstPageSpinner" class="col-xs-12 d-none">
                <span class="fa fa-spinner fa-spin"></span>
            </div>
            <span>Première page</span>
        </button>
        <div id="firstPageContent"></div>
    </div>
    <div class="row">&nbsp;</div>

    <div class="form-group col-xs-12">
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                User..........<input type="text" id="userInput" />
                <br />
                Message...<input type="text" id="messageInput" />
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-6">&nbsp;</div>
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Index/Index.js" asp-append-version="true"></script>
<script src="~/lib/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
<script src="~/js/chat.js" asp-append-version="true"></script>
